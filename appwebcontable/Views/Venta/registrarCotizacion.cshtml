
@{
    ViewBag.Title = "Cotización";
}
<div class="row">
    @Html.Partial("MenuAgenteDeVentas")
    
    <div class="col-lg-12">
        <h2>Cotización</h2>
        <form id="form-cotizacion" method="post">
            <div class="form-group">
                <label>Nombre de Cliente</label>
                <input id="cliente" type="text" class="form-control" name="cliente" placeholder="Nombre de Cliente" required>
            </div>
            <div class="form-group">
                <label>Dirección</label>
                <input id="direccion" type="text" class="form-control" name="direccion" required>
            </div>

            <div class="form-group">
                <label>Para (Correo electronico)</label>
                <input id="correo" type="email" class="form-control" name="correo" required>
            </div>
            <div class="form-group">
                <label>Mensaje</label>
                <textarea id="mensaje" class="form-control " name="mensaje" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
    <script>
         CKEDITOR.replace('mensaje');
    </script>
</div>

