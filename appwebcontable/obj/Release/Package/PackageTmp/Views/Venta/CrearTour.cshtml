
@{
    ViewBag.Title = "CrearTour";
}
<div class="row">
    @Html.Partial("MenuAdministrador")
    <div class="col-lg-12">
        <h2>Crear Tour</h2>
        <form id="form-tour" method="post">
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Nombre de Tour</label>
                    <input id="tour" type="text" class="form-control" name="tour" placeholder="Nombre de Tour" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Salida de</label>
                    <input id="sale" type="text" class="form-control" name="sale" required>
                </div>
            </div>
            <div class="row">
                
                <div class="form-group col-md-4">
                    <label>Hora de Salida</label>
                    <input type="time" id="horasalida" class="form-control" name="horasalida" required>
                    
                </div>
                <div class="form-group col-md-4" >
                    <label>Hora de Regreso</label>
                    <input type="time" id="horaregreso" class="form-control" name="horaregreso" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Duración (hrs)</label>
                    <input type="number" id="duracion" class="form-control" name="duracion" required>
                </div>
                <div class="form-group col-md-4">
                    <label>Costo de Temporada Alta</label>
                    <input type="number" id="costoalta" step="any" class="form-control" name="costoalta" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Costo de Temporada Baja</label>
                    <input type="number" id="costobaja" step="any" class="form-control" name="costobaja" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label>Descripción</label>
                    <textarea id="descripcion" class="form-control incluye" name="descripcion" required></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
    <script>
        CKEDITOR.replace('descripcion');
    </script>
</div>



