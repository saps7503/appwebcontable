
@{
    ViewBag.Title = "EditarPaquete";
}
<div class="row">
    @Html.Partial("MenuAdministrador")
    <div class="col-lg-12">
        <h2>Editar Paquete</h2>
        <form id="form-paquete-editar" method="post">
            @foreach (var item in ViewBag.paquete)
            {
                <input id="idpaquete" type="hidden" value="@item.id" />
                <div class="form-group">
                    <label>Nombre de Paquete</label>
                    <input id="paquete" type="text" class="form-control" name="paquete" placeholder="Nombre de Paquete" value="@item.nombre" required>
                </div>
                <div class="form-group">
                    <label>Costo Temporada Alta</label>
                    <input id="precioalta" type="number" class="form-control" step="any" name="precioalta" value="@item.costo_alta" required>
                </div>
                <div class="form-group">
                    <label>Costo Temporada Baja</label>
                    <input id="preciobaja" type="number" class="form-control" step="any" name="preciobaja" value="@item.costo_baja" required>
                </div>
                <div class="form-group">
                    <label>Días</label>
                    <input id="dias" type="number" class="form-control" name="dias" value="@item.dias" required>
                </div>
                <div class="form-group">
                    <label>Incluye</label>
                    <textarea id="incluye" class="form-control incluye" name="incluye" required>@Html.Raw(@item.incluye)</textarea>
                </div>
                <div class="form-group">
                    <label>Itinerario</label>
                    <textarea id="itinerario" class="form-control itinerario" name="itinerario" required>@Html.Raw(@item.itinerario)</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="VerPaquetes" class="btn btn-danger">Cancelar</a>
            }
        </form>
    </div>
</div>
<script>
    CKEDITOR.replace('incluye');
    CKEDITOR.replace('itinerario');
</script>

