
@{
    ViewBag.Title = "Movimiento";
}
<div class="row">
    @Html.Partial("MenuContador")
    <h2>Registrar Movimiento</h2>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <form id="form-movimiento" method="post"  action="Registrar">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Cuenta</label>
                            <select id="cuenta" class="form-control" name="cuenta" onchange="verCuentaMovDia(this.value)" required>
                                @foreach (var item in ViewBag.vistaListaCuentas)
                                {
                                    <option value="@item.id">@item.referencia: @item.numeroCuenta</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Transacción:</label>
                            <select id="transaccion" class="form-control" name="transaccion" required>
                                <option value="Deposito">Deposito</option>
                                <option value="Retiro">Retiro</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Cantidad MXN$:</label>
                            <input id="cantidad" class="form-control" type="number" name="cantidad" step="any" required />
                        </div>
                        <div class="form-group col-md-6">
                            <label ">Fecha:</label>
                            <input id="fecha" class="form-control" type="date" name="fecha" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Descripción:</label>
                            <input id="descripcion" class="form-control" type="text" name="descripcion" required />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Referencia:</label>
                            <input id="referencia" class="form-control" type="text" name="referencia" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Autorización:</label>
                            <input id="autorizacion" class="form-control" type="text" name="autorizacion" required />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Concepto:</label>
                            <input id="concepto" class="form-control" type="text" name="concepto" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <input class="btn btn-default" type="submit" value="Registrar" name="registrar" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6">
                <table class="table">
                    <thead>
                        <tr><th>Fecha: @ViewBag.fecha</th></tr>
                        <tr>
                            <th align="center"><p>Descripción</p></th>
                            <th align="center"><p>Deposito</p></th>
                            <th align="center"><p>Retiro</p></th>
                            <th align="center"><p>Saldo</p></th>
                            
                        </tr>
                    </thead>
                    <tbody id="tbodyMov">
                        @if (ViewBag.ContMov > 0)
                        {
                            foreach (var item in ViewBag.movimientos)
                            {
                                <tr>
                                    <th>@item.descripcion</th>
                                    <th>@item.deposito MXN$</th>
                                    <th>@item.retiro MXN$</th>
                                    <th>@item.saldoMXM MXN$</th>
                                
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><th colspan="6">No hay Transacciones</th></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

